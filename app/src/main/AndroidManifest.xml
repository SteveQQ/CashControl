<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.steveq.cashcontrol"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:name=".CashControlApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_cash_96"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeMaterial">
        <activity
            android:name=".ui.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.LoggingActivity">
        </activity>
        <activity android:name=".ui.activities.CatalogsActivity"
            android:theme="@style/AppThemeCompat">add
        </activity>
        <activity android:name=".ui.activities.ReceiptsActivity"
                  android:theme="@style/AppThemeCompat">add
        </activity>
    </application>

</manifest>